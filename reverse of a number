// write a program that calculate reverse of digits.

#include <stdio.h>

int main()
{
    int num, sum = 0, r, temp;
    printf("Enter a number: ");
    scanf("%d", &num);
    temp = num;
    while(temp != 0) {
        r = temp % 10;
        sum = sum*10 + r;
        temp = temp / 10;
    }
    printf("The reverse of the digit is: %d\n", sum);
    return 0;
}
